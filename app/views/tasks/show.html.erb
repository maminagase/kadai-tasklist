<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

<% if logged_in? %>
<p>ログイン完了ユーザ: <%= current_user.name %></p>


<h1>id
<%= @task.id %>
</h1>
<table class="table table-bordered">
    <tr>
        <th>タスク</th>
        <td><%= @task.content %></td>
    </tr>
    <tr>
        <th>status</th>
        <td><%= @task.status %></td>
    </tr>
</table>

<%= link_to '編集', edit_task_path(@task),class: 'btn btn-default' %>

<% if current_user == @task.user %>
<%= link_to '削除' , @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' },class: 'btn btn-danger' %>
<% end %>

<% else %>
<%= link_to '一覧に戻る' , tasks_path,class: 'btn btn-default' %>
<% end %>

</div>